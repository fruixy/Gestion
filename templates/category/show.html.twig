{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center text-primary mb-4">Détails de la catégorie</h1>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-primary">{{ category.name }}</h2>
        </div>
    </div>

    <a href="{{ path('app_category_index') }}" class="btn btn-outline-primary mb-4">
        Retour à la liste des catégories
    </a>

    <div>
        <h2 class="text-primary">Articles associés</h2>
        {% if articles|length > 0 %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">
                {% for article in articles %}
                    <div class="col">
                        <div class="card h-100 shadow-sm border-primary">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ article.title }}</h5>
                                <p class="card-text text-muted">
                                    {{ article.content[:100] ~ '...' }}
                                </p>
                            </div>
                            <div class="card-footer bg-white text-end">
                                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary btn-sm">
                                    Lire l'article
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info mt-4" role="alert">
                Il n'y a pas encore d'article dans cette catégorie.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
