<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Sign in</title>
        <link rel="icon" href="{{ asset('icons/favicon.svg') }}" type="image/svg+xml">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {{ importmap('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container mt-5">
            <form class="row justify-content-center" method="post">
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h3 mb-3 fw-bold text-center">Sign in</h1>

                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="_username" id="inputEmail" placeholder="Nom d'utilisateur" value="{{ last_username }}">
                                <label for="inputEmail"><i class="bi bi-person-fill"></i> Username</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" name="_password" id="inputPassword" placeholder="Mot de passe">
                                <label for="inputPassword"><i class="bi bi-asterisk"></i> Password</label>
                            </div>

                            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in <i class="bi bi-play-fill"></i></button>

                            <p class="my-3 text-muted">
                                No account yet?
                                <a class="text-decoration-none" href="{{ path('register_index') }}">Sign up!</a>
                            </p>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>
